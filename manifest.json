{
  "description": "Tabless Browsing",
  "applications": {
    "gecko": {
      "id": "tabless@stebalien.com",
      "strict_min_version": "54.0"
    }
  },
  "homepage_url": "http://stebalien.com/projects/tabless",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://*"],
      "js": ["unload.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "sleep.png"
  },
  "permissions": ["tabs", "*://*"],
  "name": "Tabless",
  "version": "1.0"
}
